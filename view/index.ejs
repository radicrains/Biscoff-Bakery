<body>
    <h1>List of Baking Goods!</h1>

    <ul>
        <% for(let i=0; i<bakeList.length; i++) { %>
            <li>
                <a href="/bakegoods/<%=i%>">
                <%= bakeList[i].name.charAt(0).toUpperCase()+bakeList[i].name.slice(1) %>
                </a>
            </li>
        <% } %>
    </ul>

    <br>
    <br>
    <p><a href="/create">Add New Receipe!</a></p>
</body>
</html>